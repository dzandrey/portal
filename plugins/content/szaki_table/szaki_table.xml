	<authorEmail>info@szathmari.hu</authorEmail>
	<authorUrl>www.szathmari.hu</authorUrl>
	<version>1.2</version>
	<description>PLG_CONTENT_SZAKI_TABLE_XML_DESCRIPTION</description>
	
	<!-- Main Files -->
	<files>
		<filename plugin="szaki_table">szaki_table.php</filename>
		<filename>index.html</filename>
		<folder>language</folder>
		<folder>assets</folder>
	</files>
	
	<!-- Admini language -->
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_content_szaki_table.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_content_szaki_table.sys.ini</language>
		<language tag="hu-HU">hu-HU/hu-HU.plg_content_szaki_table.ini</language>
		<language tag="hu-HU">hu-HU/hu-HU.plg_content_szaki_table.sys.ini</language>
		<language tag="nl-NL">nl-NL/nl-NL.plg_content_szaki_table.ini</language>
		<language tag="nl-NL">nl-NL/nl-NL.plg_content_szaki_table.sys.ini</language>
	</languages>
	
	<!-- Plugin Config -->
	<config>
		<fields name="params">
			<fieldset name="basic">	
				<field name="jQuery" type="list" default="1" label="JQUERY" description="JQUERY_DESC">
					<option value="1">Yes</option>
					<option value="0">No</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>